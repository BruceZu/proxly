{
  "name": "Redirector App",

  "version": "0.0.1",
  "manifest_version": 2,
  "description": "__MSG_appDescription__",
  "icons": {
    "16": "icon-16.png",
    "128": "icon-128.png"
  },

  "app": {
    "background": {
      "scripts": ["bundles/background.bundle.js"]
    }
  },
  "web_accessible_resources": ["styles/iconic.min.js","styles/file.svg", "styles/livereload.js", "styles/bootstrap.min.js","styles/jquery.min.js", "styles/bootstrap.min.css", "styles/main.css"],
  "permissions": [
  {"socket":[
            "tcp-connect",
            "udp-bind::",
            "tcp-listen::",
            "udp-send-to::"
        ]},

  "management",

"webview", "<all_urls>",
        "file://*",
        "file:///*",
        "chrome-extension://*",{"fileSystem": ["write", "retainEntries", "directory"]}, "background",
        "storage"
  ]
}
