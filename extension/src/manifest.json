{
    "name": "Proxly Extension",
    "version": "0.1.6",
    "manifest_version": 2,
    "description": "Proxly Extension",
    "icons": {
        "128": "images/icon.png"
    },
    "options_page":"options.html",
    "devtools_page":"panel.html",
 
    "web_accessible_resources": [
        "redirector"
    ],
    "browser_action": {
        "default_icon": {
            "38": "images/icon-38.png",
            "19": "images/icon-19.png"
        },
        "default_title": "Proxly"
    },
    "background": {
        "scripts": [
            "scripts/background.bundle.js"
        ]
    },
       "permissions": [
       "management",
       "activeTab",
        "storage", 
        "background",
        "tabs",
        "notifications",
        "webRequest",
        "webRequestBlocking",
        "\u003Call_urls\u003E"
    ]
}
